        <!-- Monitoring & Observability -->
        <micrometer.version>1.11.2</micrometer.version>
        <opentracing.version>0.33.0</opentracing.version>
        <jaeger.version>1.8.1</jaeger.version>
        <opentelemetry.version>1.30.1</opentelemetry.version>
        
