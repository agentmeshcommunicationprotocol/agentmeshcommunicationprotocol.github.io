    <dependencyManagement>
        <dependencies>
            <!-- AMCP Modules -->
            <dependency>
                <groupId>io.amcp</groupId>
                <artifactId>amcp-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.amcp</groupId>
